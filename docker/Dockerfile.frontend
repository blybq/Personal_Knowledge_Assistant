# 构建阶段
FROM node:22-slim as build-stage

# 设置工作目录
WORKDIR /app

# 复制前端依赖文件
COPY front_end/package*.json ./

# 安装依赖
RUN npm install

# 复制前端源代码
COPY front_end/ .

# 构建应用
RUN npm run build

# 生产阶段
FROM nginx:alpine as production-stage

# 复制构建好的文件到nginx
COPY --from=build-stage /app/dist /usr/share/nginx/html

# 复制nginx配置
COPY front_end/nginx/nginx.conf /etc/nginx/nginx.conf

# 暴露端口
EXPOSE 80

# 启动nginx
CMD ["nginx", "-g", "daemon off;"]
